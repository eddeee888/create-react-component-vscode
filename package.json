{
    "name": "create-react-component-vscode",
    "displayName": "Create React Component",
    "description": "‚öõÔ∏èüî•Generate React Component Boilerplate",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.createReactComponent"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.createReactComponent",
                "title": "Create React Component"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.createReactComponent",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.createReactComponent",
                    "group": "create-react-component"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Create React Component",
            "properties": {
                "createReactComponent.language": {
                    "type": "string",
                    "default": "typescript",
                    "enum": [
                        "typescript",
                        "javascript"
                    ],
                    "enumDescriptions": [
                        "Generates component in typescript",
                        "Generates component in javascript"
                    ],
                    "description": "Specifies what language to generate the component"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test:integration": "npm run compile && node ./out/integration-test/runTest.js",
        "test:unit": "mocha -r ts-node/register 'src/**/*.test.ts' --exclude 'src/integration-test/**/*'"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/sinon": "^7.0.13",
        "@types/vscode": "^1.36.0",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "chai": "^4.2.0",
        "eslint": "^6.1.0",
        "eslint-config-airbnb": "^17.1.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "prettier": "^1.18.2",
        "sinon": "^7.3.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.3.1",
        "vscode-test": "^1.0.0-next.0"
    },
    "dependencies": {}
}
